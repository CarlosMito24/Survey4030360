<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Survey4030360.Views.SurveyDetailsView"
             Title="{Binding Name}"
             xmlns:models="clr-namespace:Survey4030360.Models"
             x:DataType="models:SurveyItem">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="StartAndExpand">
            <Label Text="Nombre:" Margin="10, 10, 10, 10"/>
            <Entry Text="{Binding Name}"/>

            <Label Text="Fecha de nacimiento:" Margin="10, 10, 10, 10"/>
            <Entry Text="{Binding Birthdate}" Margin="10, 10, 10, 10" MaxLength="10" Placeholder="DD/MM/AAAA" Keyboard="Numeric"/>

            <Label Text="Ingresa el nombre de un equipo favorito:" Margin="10,10, 10,10"/>
            <Entry Text="{Binding EquipoFavorito}" Margin="10,10, 10,10"/>

            <Button Text="Guardar" Margin="10, 10, 10, 1"
                Clicked="OnSaveClicked"/>
            <Button Text="Borrar" Margin="10, 1, 10, 1"
                Clicked="OnDeleteClicked"/>
            <Button Text="Cancelar" Margin="10, 1, 10, 1"
                Clicked="OnCancelClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>